{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch DungeonGen",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/DungeonGen",  // Path to executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Path to gdb (adjust if necessary)
            "externalConsole": true,
            "preLaunchTask": "build dungeongen",
            "logging": {
                "engineLogging": true
            }
        }
    ]
}
